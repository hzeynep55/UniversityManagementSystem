
@{
    Layout = "~/Views/Shared/_LoginPartialView.cshtml";
}

<div style="width: 250px; height: 350px; margin-top: 80px; border: thin; padding: 10px; box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;; margin-left: auto; margin-right: auto; ">

    <form class="form-group" method="post">
       
        <div style="margin:20px">
            <h5 style="text-align:center">Kullanıcı Girişi</h5>
        </div>
        <div style="margin:20px">
            <label style="margin-bottom:5px">Kullanıcı Adı</label>
            <input class="form-control" type="text" name="username" />
        </div>
        <div style="margin:20px ">
            <label style="margin-bottom:5px">Şifre</label>
            <input class="form-control" type="password" name="password" />
        </div>
        <div style="margin:20px 20px 9px 20px">
            <button class="btn btn-primary" style="width: 100%">Giriş</button>
        </div>
        <div style="margin-left:110px">
            <a style="font-size:12px" href="Sifre/Index">Şifremi Unuttum</a>
        </div>



    </form>
</div>

